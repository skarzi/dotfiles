! CURSORS
URxvt.cursorBlink: true
URxvt.cursorColor: #09bfdf
URxvt.cursorUnderline: false

! URLS
URxvt*colorUL: #86a2b0
! clickable links:
URxvt.urlLauncher: /usr/bin/iceweasel
URxvt.matcher.button: 1

! TABS
URxvt.tabbed.tabbar-fg:     8
URxvt.tabbed.tabbar-bg:     11
URxvt.tabbed.tab-fg:        11
URxvt.tabbed.tab-bg:        8

! PLUGINS
URxvt.perl-ext-common: default,keyboard-select,font-size

! KEYBOARD-SELECT
URxvt.keysym.M-Escape: perl:keyboard-select:activate
URxvt.keysym.M-s: perl:keyboard-select:search

! FONT SIZE DYNAMIC RESIZING
URxvt.keysym.C-S-Up:   font-size:incglobal
URxvt.keysym.C-S-Down: font-size:decglobal
URxvt.keysym.C-equal:  font-size:reset
URxvt.keysym.C-slash:  font-size:show

URxvt*visualBell: true
URxvt.saveLines: 10000
